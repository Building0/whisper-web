{
  "project": {
    "name": "Whisper Web",
    "version": "0.0.0",
    "type": "browser-based-speech-transcription",
    "description": "A web application that allows you to transcribe audio files to text completely locally in your web browser using OpenAI's Whisper models via Transformers.js",
    "repository": {
      "original": "https://github.com/xenova/whisper-web",
      "current": "https://github.com/PierreMesure/whisper-web",
      "fork_status": "actively maintained fork"
    },
    "live_demos": [
      {
        "url": "https://whisper-web.mesu.re",
        "description": "Main application with multiple language support"
      },
      {
        "url": "https://kb-whisper.mesu.re", 
        "description": "Swedish-focused version using KB-Whisper models"
      }
    ]
  },
  "technology_stack": {
    "frontend": {
      "framework": "React 19.1.0",
      "language": "TypeScript",
      "build_tool": "Vite 6.3.5",
      "styling": "Tailwind CSS 4.1.8",
      "ui_components": "@headlessui/react"
    },
    "ai_ml": {
      "core_library": "@huggingface/transformers 3.5.2",
      "execution_backend": "WebAssembly (WASM) / WebGPU",
      "model_format": "ONNX",
      "processing": "Web Workers for non-blocking execution"
    },
    "internationalization": {
      "library": "i18next",
      "react_integration": "react-i18next",
      "supported_languages": ["en", "sv", "no", "es"]
    }
  },
  "core_features": {
    "transcription": {
      "local_processing": "Runs entirely in browser, no server required",
      "real_time_streaming": "Continuous transcription rendering during processing",
      "chunked_processing": "Audio split into overlapping chunks for efficient processing",
      "timestamp_support": "Precise timestamps for each transcribed segment"
    },
    "audio_input": {
      "file_upload": "Support for various audio formats",
      "url_input": "Direct URL input for remote audio files",
      "microphone_recording": "Real-time audio recording capability",
      "stereo_to_mono": "Automatic stereo downmixing with proper scaling"
    },
    "model_support": {
      "whisper_variants": [
        "whisper-tiny", "whisper-base", "whisper-small", 
        "whisper-medium", "whisper-large-v3-turbo"
      ],
      "specialized_models": {
        "swedish": "KB-Whisper models (tiny, base, small, medium, large)",
        "norwegian": "nb-whisper models (tiny, base, small)",
        "english_only": "distil-small.en (optimized)"
      },
      "quantization_levels": ["fp32", "fp16", "q8", "int8", "uint8", "q4", "bnb4", "q4f16"],
      "mobile_optimization": "Automatic tiny model selection for mobile devices"
    },
    "performance": {
      "gpu_acceleration": "WebGPU support when available",
      "cpu_fallback": "WebAssembly execution for CPU-only devices",
      "progressive_loading": "Model files loaded with progress indicators",
      "caching": "Browser caching for downloaded models"
    },
    "export_functionality": {
      "srt_export": "Export transcriptions as SRT subtitle files",
      "timestamp_formatting": "Proper SRT timestamp format (HH:MM:SS,mmm)"
    },
    "user_experience": {
      "progressive_web_app": "PWA support for offline usage",
      "responsive_design": "Mobile and desktop optimized",
      "language_switching": "UI language selection",
      "cache_management": "Clear model cache functionality",
      "error_handling": "Comprehensive error reporting and recovery"
    }
  },
  "supported_languages": {
